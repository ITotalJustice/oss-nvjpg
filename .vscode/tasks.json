{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "gen",
            "type": "shell",
            "command": "meson",
            "args": [
                "build",
                "--buildtype",
                "debug",
                "-Db_lto=false"
            ],
            "presentation": {
                "panel": "shared",
                "reveal": "never"
            },
            "options": {
                "env": {
                    "CC": "gcc-10",
                    "CXX": "g++-10",
                }
            },
            "problemMatcher": []
        },
        {
            "label": "all",
            "type": "shell",
            "command": "ninja",
            "args": [
                "all",
                "examples",
                "-j$(nproc)",
            ],
            "options": {
                "cwd": "${workspaceFolder}/build",
                "env": {
                    "LANG": "en",
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": ["relative", "${workspaceFolder}/build"]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "ninja",
            "args": [
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build",
            },
            "presentation": {
                "panel": "shared",
                "reveal": "never"
            },
            "problemMatcher": []
        },
        {
            "label": "run",
            "dependsOn": [
                "all",
            ],
            "type": "shell",
            "command": "${workspaceFolder}/build/render-rgb",
            "args": [
                "data/test.jpg",
            ],
            "options": {
                "env": {
                    "DISPLAY": ":0",
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": []
        }
    ]
}
